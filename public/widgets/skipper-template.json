{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ActionSet",
            "horizontalAlignment": "Center",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Message Skipper",
                    "url": "${chatUrl}",
                    "iconUrl": "https://www.skipperai.app/assets/scan-outline.svg"
                }
            ]
        },
        {
            "type": "ActionSet",
            "horizontalAlignment": "Center",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Voice Chat",
                    "url": "${voiceUrl}",
                    "iconUrl": "https://www.skipperai.app/assets/headset-outline.svg"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Create Images",
                    "url": "${imageUrl}",
                    "iconUrl": "https://www.skipperai.app/assets/image-outline.svg"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "verticalContentAlignment": "Center"
}